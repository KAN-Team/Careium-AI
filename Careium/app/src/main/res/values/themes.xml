<resources>
    <!-- Base application theme. -->
    <style name="Theme.Careium" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- App Theme Colors -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_dark</item> <!--TODO: should be green_light-->
        <item name="colorSecondary">@color/orange_700</item>
        <item name="colorSecondaryVariant">@color/orange_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/comicz</item>
    </style>

    <style name="Theme.auth" parent="Theme.AppCompat.NoActionBar">
        <!-- App Theme Colors -->
        <item name="colorSecondary">@color/orange_700</item>
        <item name="colorSecondaryVariant">@color/orange_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/comicz</item>
    </style>

    <style name="Theme.white" parent="Theme.AppCompat.NoActionBar">
        <!-- App Theme Colors -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorSecondary">@color/green_500</item>
        <item name="android:fontFamily">@font/comicz</item>
    </style>

    <style name="Theme.custom_button" parent="Theme.AppCompat.NoActionBar">
        <!-- App Theme Colors -->
        <item name="colorPrimary">@color/white_blue</item>
        <item name="colorSecondary">@color/green_500</item>
        <item name="android:fontFamily">@font/comicz</item>
    </style>

</resources>